@model EFrazier_Blog.Models.Comment

@{
    ViewBag.Title = "Edit";
}

<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-color: crimson">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>Edit Comment</h1>
                    <hr class="small">
                    <span class="subheading">Someone said something bad :(</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            @using (Html.BeginForm("Edit", "Comments", FormMethod.Post, new { enctype = "Multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.BlogPostId)
                @Html.HiddenFor(model => model.Created)
                @Html.Hidden("Slug", Model.BlogPost.Slug)
                @Html.HiddenFor(model => model.AuthorId)

                //<form name="sentMessage" id="contactForm" novalidate>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <Label>@Html.LabelFor(model => model.Body, htmlAttributes: new { @class = "control-label" })</Label>

                        @Html.EditorFor(model => model.Body, new { htmlAttributes = new { @class = "form-control", placeholder = "Body", id = "name" } })
                        <p class="help-block text-danger"> @Html.ValidationMessageFor(model => model.Body)</p>
                    </div>
                </div>

                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <Label>@Html.LabelFor(model => model.UpdateReason, new { @class = "control-label" })</Label>

                        @Html.TextBoxFor(model => model.UpdateReason, new { @class = "form-control", placeholder = "Reason", id = "email" })
                        <p class="help-block text-danger"> @Html.ValidationMessageFor(model => model.UpdateReason)</p>
                    </div>
                </div>

                <br />
                <div class="row control-group">
                    <div id="success"></div>
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                //</form>
            }
        </div>
    </div>
</div>
<hr>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

